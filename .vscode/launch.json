{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node",
            "remoteRoot": "/usr/src/Wealthtrack-app",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/backend",
            "protocol": "inspector",
            "restart": true,
            "preLaunchTask": "docker-compose up"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Attach to Node (with rebuild)",
            "remoteRoot": "/usr/src/Wealthtrack-app",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/backend",
            "protocol": "inspector",
            "restart": true,
            "preLaunchTask": "docker-compose up with rebuild"
        }
    ]
}